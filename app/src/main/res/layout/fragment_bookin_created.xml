<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookingCreatedFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BookinCreatedFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/bookingCreated"
        android:layout_width="288dp"
        android:layout_height="58dp"
        android:fontFamily="@font/ubuntu_mono"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />

    <ImageView
        android:id="@+id/QRImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <Button
        android:id="@+id/confirmCreateBooking"
        android:layout_width="263dp"
        android:layout_height="66dp"
        android:layout_marginBottom="20dp"
        android:background="@color/blue_56BDE6"
        android:fontFamily="@font/ubuntu_mono"
        android:text="Confirmer Rendez-Vosu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>