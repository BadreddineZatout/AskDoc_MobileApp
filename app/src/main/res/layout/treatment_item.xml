<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardBackgroundColor="#F6F6F6"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="375dp"
        android:layout_height="175dp">

        <TextView
            android:id="@+id/treatmentDisease"
            android:layout_width="110dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:text="Maladie"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="15dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/treatmentItemTextView"
            card_view:layout_constraintStart_toEndOf="@+id/treatmentItemTextView"
            card_view:layout_constraintTop_toTopOf="@+id/treatmentItemTextView" />

        <TextView
            android:id="@+id/treatmentDescription"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:text="Maladie"
            android:textColor="#000000"
            android:textSize="10dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/treatmentItemTextView2"
            card_view:layout_constraintTop_toBottomOf="@+id/treatmentItemTextView2"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/treatmentItemTextView"
            android:layout_width="81dp"
            android:layout_height="27dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Maladie: "
            android:textColor="#000000"
            android:textSize="20dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/treatmentItemTextView2"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Description de Traitement"
            android:textColor="#000000"
            android:textSize="15dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/treatmentItemTextView" />

        <TextView
            android:id="@+id/treatmentItemTextView3"
            android:layout_width="127dp"
            android:layout_height="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="Date Debut Traitement"
            android:textColor="#000000"
            android:textSize="10dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/treatmentDisease" />

        <TextView
            android:id="@+id/treatmentBeginDate"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:text="Date Debut Traitement"
            android:textColor="#000000"
            android:textSize="10dp"
            card_view:layout_constraintEnd_toEndOf="@+id/treatmentItemTextView3"
            card_view:layout_constraintTop_toBottomOf="@+id/treatmentItemTextView3" />

        <TextView
            android:id="@+id/treatmentItemTextView5"
            android:layout_width="127dp"
            android:layout_height="21dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:text="Date FinTraitement"
            android:textColor="#000000"
            android:textSize="10dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/treatmentBeginDate" />

        <TextView
            android:id="@+id/treatmentEndDate"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:text="Date Debut Traitement"
            android:textColor="#000000"
            android:textSize="10dp"
            card_view:layout_constraintEnd_toEndOf="@+id/treatmentItemTextView5"
            card_view:layout_constraintTop_toBottomOf="@+id/treatmentItemTextView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>